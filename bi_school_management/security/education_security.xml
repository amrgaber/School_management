<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_education" model="ir.module.category">
            <field name="name">Education</field>
            <field name="description">Education</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_education_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_education"/>
        </record>

        <record id="group_education_teacher" model="res.groups">
            <field name="name">Teacher</field>
            <field name="category_id" ref="module_category_education"/>
            <field name="implied_ids" eval="[(4, ref('group_education_user'))]"/>
        </record>

        <record id="group_education_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="module_category_education"/>
            <field name="implied_ids" eval="[(4, ref('group_education_teacher'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="education_class_teacher_rule" model="ir.rule">
            <field name="name">Teacher Class Rule</field>
            <field name="model_id" ref="model_education_class"/>
            <field name="groups" eval="[(4, ref('group_education_teacher'))]"/>
            <field name="domain_force">[('teacher_id', '=', user.employee_id.id)]</field>
        </record>

        <record id="education_school_company_rule" model="ir.rule">
            <field name="name">School Company Rule</field>
            <field name="model_id" ref="model_education_school"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record id="education_student_user_rule" model="ir.rule">
            <field name="name">Student User Rule</field>
            <field name="model_id" ref="model_education_student"/>
            <field name="groups" eval="[(4, ref('group_education_user'))]"/>
            <field name="domain_force">[('partner_id.user_ids', 'in', [user.id])]</field>
        </record>

    </data>
</odoo>
