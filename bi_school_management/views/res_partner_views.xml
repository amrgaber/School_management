<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Inherit the base res.partner form view to add the gender field -->
        <record id="res_partner_view_form_inherit_school_management" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.school.management</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <field name="category_id" position="after">
                    <field name="gender"/>
                </field>
            </field>
        </record>
</odoo>
